{
	"name": "howl",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"setup": "bun run setup.ts",
		"dev": "concurrently \"bun run server:dev\" \"bun run frontend:dev\"",
		"server:dev": "cd packages/server && bun run dev:watch",
		"frontend:dev": "cd packages/frontend && bun run dev",
		"server:start": "cd packages/server && bun run start",
		"server:test": "cd packages/server && bun run test",
		"frontend:build": "cd packages/frontend && bun run build",
		"frontend:start": "cd packages/frontend && bun run start",
		"db:start": "docker compose up -d postgres",
		"db:stop": "docker compose down",
		"db:nuke": "docker compose down -v",
		"db:restart": "docker compose restart postgres",
		"db:generate": "cd packages/db && bun run generate",
		"db:migrate": "cd packages/db && bun run migrate",
		"db:studio": "cd packages/db && bun run studio",
		"db:push": "cd packages/db && bun run drizzle-kit push",
		"db:seed": "cd packages/db && bun run seed",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"agents:run": "cd packages/agents && bun run src/index.ts",
		"agents:seed": "cd packages/agents && bun run src/util/seed.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.4",
		"concurrently": "^8.2.2"
	}
}
